{
    "__version__": "2.7.1",
    "!automation": "basic_automation",
    "audio": "pipewire",
    "bootloader": "systemd-boot",
    "disk_config": {
        "config_type": "default_layout",
        "device_modifications": [
            {
                "device": "/dev/sda",
                "partitions": [
                    {
                        "mountpoint": "/",
                        "start": "0%",
                        "size": "100%",
                        "status": "create",
                        "type": "primary",
                        "filesystem": {
                            "format": "btrfs",
                            "mount_options": [
                                "compress=zstd",
                                "noatime",
                                "space_cache=v2"
                            ],
                            "subvolumes": {
                                "@": "/",
                                "@home": "/home",
                                "@log": "/var/log",
                                "@pkg": "/var/cache/pacman/pkg",
                                "@.snapshots": "/.snapshots"
                            }
                        }
                    }
                ]
            }
        ]
    },
    "hostname": "ArchLegion",
    "kernels": [
        "linux-zen"
    ],
    "locale": "it_IT.UTF-8",
    "mirror-region": {
        "Italy": [
            "http://archlinux.mirror.garr.it/archlinux/$repo/os/$arch",
            "http://mirrors.prometeus.net/archlinux/$repo/os/$arch"
        ]
    },
    "nic": {
        "!config": "nic_config",
        "dhcp": true,
        "dns": null,
        "gateway": null,
        "iface": null,
        "ip": null,
        "type": "iso_default"
    },
    "ntp": true,
